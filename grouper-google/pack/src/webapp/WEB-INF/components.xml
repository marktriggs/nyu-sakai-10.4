<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
  <bean id="grouperSyncJob" class="edu.nyu.classes.groupersync.GrouperSyncJob"
        init-method="init">
    <property name="sqlService" ref="org.sakaiproject.db.api.SqlService" />
    <property name="courseManagement" ref="org.sakaiproject.coursemanagement.api.CourseManagementService" />
  </bean>

  <bean id="org.sakaiproject.api.app.scheduler.JobBeanWrapper.grouperSyncJob"
        class="org.sakaiproject.component.app.scheduler.jobs.SpringJobBeanWrapper"
        singleton="true" init-method="init">
    
    <property name="beanId">
      <value>grouperSyncJob</value>
    </property>
    
    <property name="jobName">
      <value>Run grouper synchronization</value>
    </property>

   
    <property name="schedulerManager">
      <ref bean="org.sakaiproject.api.app.scheduler.SchedulerManager" />
    </property>
    
  </bean>
  
</beans>
